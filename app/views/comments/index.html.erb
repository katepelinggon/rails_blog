<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Comment</th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.id %></td>
        <td><%= comment.body %></td>
        <td><%= link_to 'Show', article_comment_path(comment.id) %></td>
        <td><%= link_to 'Edit', edit_article_comment_path(comment.id) %></td>
        <td><%= button_to "Delete", article_comment_path(comment), method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Add Comment', new_comment_path %>